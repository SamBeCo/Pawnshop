<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PawnshopUnchu</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="index.html">Empeños Cesar</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="text-white nav-link" href="#" data-toggle="modal" data-target="#logoutModal">
                    Cerrar sesión <i class="fas fa-user-circle fa-fw"></i>
                </a>
            </li>
        </ul>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="index.html">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Productos</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Registrar Producto", "AdminRegProduct", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Editar Producto", "AdminEditProduct", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Eliminar Producto", "AdminDeleteProduct", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Lista de Productos", "AdminListProduct", "User", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Datos Personales</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Registrar Información", "UserRegInfo", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Editar Información", "UserEditInfo", "User", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Solicitudes</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Registrar Solicitud", "UserRegSolicitud", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Editar Solicitud", "UserEditSolicitud", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Eliminar Solicitud", "UserDelSolicitud", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Lista de Solicitudes", "UserListSolicitud", "User", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Mensajes</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    @Html.ActionLink("Últimos mensajes", "UserLastMessages", "User", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Lista de mensajes", "UserListMessages", "User", null, new { @class = "dropdown-item" })
                </div>
            </li>
        </ul>
        <div id="content-wrapper">

            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    @using (Html.BeginForm("Logout", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">¿Estás listo para salir?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Seleccionar "Salir", si estas listo para cerrar sesión.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Cerrar Sesión</button>
                    </div>
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


